<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/message_groupChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/sending_chat_backround"
            android:fontFamily="serif"
            android:maxLines="30"
            android:paddingTop="6dp"
            android:paddingBottom="20dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Hello"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/time_sending_groupChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="17:30"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/message_groupChat"
            android:layout_marginRight="6dp"
            android:layout_marginTop="-16dp"/>

       <!-- <ImageView
            android:id="@+id/isSeenMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone" />-->

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/chatProfileImgReceiving"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:civ_border_color="#000000"
            app:civ_border_width="2px" />

    </RelativeLayout>


</RelativeLayout>